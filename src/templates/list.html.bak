<div>
    <section class="content-list">
        <header class="floatingheader" data-dojo-attach-point="topNode">
            <section class="content-filter">
                <small>${nls.allPosts}</small>
            </section>
            <a class="ember-view btn btn-material-blue" title="New Post" data-dojo-attach-point="newPostNode">${nls.newPost}</a>
        </header>
    </section>
    <div class="row clearfix">
        <section class="ember-view content-list-content col-sm-5" data-dojo-attach-point="centerNode"></section>
        <section class="content-preview js-content-preview col-sm-7">
            <header class="post-preview-header clearfix">
                <small class="post-published-by">
			<span class="status">${nls.writtenBy}</span>
			<span class="author" data-dojo-attach-point="authorNode"></span>
			</small>
                <section class="post-controls">
                    <a class="ember-view btn btn-default" data-dojo-attach-point="deleteNode" title="${nls.delete}">${nls.delete}</a>
                    <a class="ember-view btn btn-default" data-dojo-attach-point="translateNode" title="${nls.translate}">${nls.translate}</a>
                    <a class="ember-view btn btn-default" data-dojo-attach-point="editNode" title="${nls.edit}">${nls.edit}</a>
                    <a class="ember-view btn btn-default" data-dojo-attach-point="previewNode" title="${nls.preview}">${nls.preview}</a>
                </section>
            </header>
            <section class="ember-view content-preview-content">
                <div class="wrapper" data-dojo-attach-point="contentPreviewNode"></div>
            </section>
        </section>
    </div>
</div>
