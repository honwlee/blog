<div class="${baseClass}" data-dojo-type="qface/controls/container/BorderContainer" style="${style}" data-dojo-props="liveSplitters:false,gutters:false,name:'mainNode',region:'${region}'">
	<div data-dojo-attach-point="containerNode" style="width:100%;height:100%;">
		<div class="topPreview" data-dojo-type="qface/controls/container/ContentPane" data-dojo-props="region:'top',name:'topNode'" style="height:50px;">
			<ul>
				<li class="author">
					<img data-dojo-attach-point="avatarNode" />
				</li>
				<li class="title" data-dojo-attach-point="titleNode"></li>
			</ul>
		</div>

		<div class="centerPreview" data-dojo-type="qface/controls/container/ContentPane" data-dojo-props="region:'center',name:'centerNode'">
			<div data-dojo-attach-point="topPlaceNode"></div>
			<div data-dojo-attach-point="contentNode" class="content"></div>
		</div>

		<div class="bottomPreview" data-dojo-type="qface/controls/container/ContentPane" data-dojo-props="region:'bottom',name:'bottomNode'" style="height:40px;"></div>
	</div>
	<div data-dojo-attach-point="goTopNode" class="goTopButton">
		<i class="fa fa-angle-double-up fa-5x"></i>
	</div>
	<ul class="oprate" data-dojo-attach-point="oprateNode"></ul>
	<ul class="pagination" data-dojo-attach-point="paginationNode">
		<li class="prev" data-dojo-attach-point="prevNode">${nls.prev}</li>
		<li class="next" data-dojo-attach-point="nextNode">${nls.next}</li>
	</ul>
</div>
