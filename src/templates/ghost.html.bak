<div class="features">
	<section class="editor">
		<div class="outer">
			<div class="editorwrap">
				<section class="entry-markdown">
					<header class="floatingheader">
						&nbsp;&nbsp; Markdown
					</header>
					<section class="entry-markdown-content">
						<textarea data-dojo-attach-point="markdownNode"></textarea>
					</section>
				</section>
				<section class="entry-preview active">
					<header class="floatingheader">
						&nbsp;&nbsp; Preview <span class="entry-word-count" data-dojo-attach-point="wordCountNode">0 words</span>
					</header>
					<section class="entry-preview-content">
						<div class="rendered-markdown" data-dojo-attach-point="previewNode"></div>
					</section>
				</section>
			</div>
		</div>
	</section>
</div>
